<h1>Page#index</h1>
<p>Find me in app/views/page/index.html.erb</p>
<h2>Friends</h2>
<% @friends.each do |f| %>
  <%= get_user_email(f.friend_id) %><br />
<% end %>

<h2>Sent invitations</h2>
<% @sent_invites.each do |i| %>
  <%= get_user_email(i.friend_id) %> |
  <%= link_to "Cancel", :controller => "page", :action => "cancel_friend_request", :id => i.friend_id %>
  <br />
<% end %>

<h2>Friend Requests</h2>
<% @friend_requests.each do |r| %>
  <%= get_user_email(r.user_id) %> |
  <%= link_to "Accept", :controller => "page", :action => "accept_friend_request", :id => r %>
<% end %>

<br />


